<p id="notice"><%= notice %></p>



<%= calendar number_of_days: 1, events: @calendar_events do |date, events| %>
  <div><strong><%=date.to_s(:long) %> </strong></div>
  <% events.each do |event| %>
  <tr>
    <td>
  <%= link_to event.name, event_path(event.id)%>
</td><td>
  <%= event.start_time.strftime("%H:%M") %></td>
  <% end %>
<% end %>


