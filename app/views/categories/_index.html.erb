<p id="notice"><%= notice %></p>




    <% @categories.each do |category| %>
    <div class="category_container">
    <div class="category_header">

       <div><i class="fab fa-firefox"></i><%= category.icon_id %> <%= category.name %></div>


       <div class="options_container">

         <div class="btn-group dropup">
           <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
             Options
           </button>
           <div class="dropdown-menu">
             <%= link_to 'Edit', edit_category_path(category) %>
             <br>
             <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %>
           </div>
         </div>


        </div>
    </div>


    <Div class="access_container">

      <% category.links.each do |link| %>

          <%= link_to 'NAME', "http://#{link.link_url}", class: "navitem", target: "_blank"%>


      <% end %>

    </div>
    </div>
    <% end %>

<br>
<div class="new_category_wrapper">
<%= link_to '+', new_category_path, class: "new_category" %>
</div>
