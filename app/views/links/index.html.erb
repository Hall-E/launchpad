<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Link name</th>
      <th>Link url</th>
      <th>Link style</th>
      <th>Icon</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>

        <td><%= link.name %></td>
        <td><%= link.link_style %></td>
        <td><%= link.icon_id %></td>
        <td><%= link.category_id %></td>
        <td><%= link_to 'Show', category_link_path(@category, link) %></td>
        <td><%= link_to 'Edit', edit_category_link_path(@category, link) %></td>
        <td><%= link_to 'Destroy', category_link_path(@category, link), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
