<p id="notice"><%= notice %></p>
<h1>Icons</h1>
<br>
<div class="jumbotron">
   <div class="row justify-content-center" style="margin:15px;">
      <% @icons.each do |icon| %>
      <div class="container col-sm-1" style="min-width:150px; background-color:grey;margin:5px; height:70px">
         <div class="align-top">
            <%= icon.id %> <i class="fa fa-<%= icon.name %>" aria-hidden="true"></i>
         </div>
         <div class="align-middle">
            <%=icon.name %>
         </div>
         <%= link_to 'Delete', icon, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <% end %>
   </div>
</div>
<div>
   <%= link_to 'New Icon', new_icon_path %>
</div>
</div>
